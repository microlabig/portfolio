mixin icon(name, className)
  - var icon = require(`images/icons/${name}.svg`);
  svg(class=className viewBox=icon.viewBox preserveAspectRatio="none")
    use(xlink:href=icon.url)

mixin image(path, className, altText="Изображение")
  img(src=require(`images/${path}`) class=className alt=altText)

mixin async_script(file, nameID='')
  script(src=require(`./scripts/async/${file}`) async id=`${nameID}_script`)
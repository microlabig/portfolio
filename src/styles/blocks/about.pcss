.about {    
    margin-bottom: 262px;

    @include desktop {
        margin-bottom: 230px;
    }  

    @include tablets {
        margin-bottom: 142px;
    }  
}

.about-container {
    display: flex;
    justify-content: center;
    padding: 0 10%;  

    @include desktop {
        padding: 0; 
    }  

    @include phones-small {
        flex-direction: column;
    }
}
@keyframes Scale-Up-Down {
    from {
        transform: scale(1.05);
    }

    35%{
        transform:  scale(.8);
    }

    to {
        transform: scale(1.05);
    }    
}

@keyframes RotateBall {
    from {
        transform:  rotate(-1deg);
    }

    to {
        transform: rotate(1deg);
    }    
}



.slide-enter-active,
.slide-leave-active {
    transition: 1s;
}
.slide-leave {
    transform: translate(0px);
    opacity: 1;
}
.slide-leave-to {
    opacity: 0;
    transform: translate(100px);
    background-color: black;
} 
.slide-enter {
    opacity: 0;
    transform: translateX(-100%);
    background-color: #fff;
}
.slide-enter-to {
    opacity: 1;
    transform: translateX(0%);
}

.slide2-enter-active,
.slide2-leave-active {
    transition: 1s;
}
.slide2-leave {
    margin-top: 0;
}
.slide2-leave-to {
    margin-top: -100px;   
} 
.slide2-enter {
    opacity: 0;
}
.slide2-enter-to {
    opacity: 1;
}


@keyframes fromRight {
    from {
        transform:  translateX(100%);
        opacity: 0;
    }

    to {
        transform: translateX(0);
        opacity: 1;
    }    
}

@keyframes fromLeft {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }    
}

@keyframes opacityElement {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }    
}


/*
    Анимации для секций
*/

$delayAnimation: .8s;

.opacityZero {
    opacity: 0;
}

.opacityOne {
    opacity: 1;
}

@keyframes slideInUpRight {
    from {
        transform: translate3d(100%, -50%, 0);
        opacity: 0;
    }

    to {
        transform: translate3d(0, 0, 0);
        opacity: 1;
    }    
}
.slideInUpRight {
    animation: slideInUpRight $delayAnimation;
}

@keyframes slideInUp {
    from {
        transform: translate3d(0, -100%, 0);
        opacity: 0;
    }

    to {
        transform: translate3d(0, 0, 0);
        opacity: 1;
    }    
}
.slideInUp {
    animation: slideInUp $delayAnimation;
}

@keyframes slideInDown {
    from {
        transform: translate3d(0, 100%, 0);
        opacity: 0;
    }

    to {
        transform: translate3d(0, 0, 0);
        opacity: 1;
    }    
}
.slideInDown {
    animation: slideInDown $delayAnimation;
}

@keyframes slideInLeft {
    from {
        transform: translate3d(-100%, 0, 0);
        opacity: 0;
    }

    to {
        transform: translate3d(0, 0, 0);
        opacity: 1;
    }    
}
.slideInLeft {
    animation: slideInLeft $delayAnimation;
}

@keyframes slideInRight {
    from {
        transform: translate3d(100%, 0, 0);
        opacity: 0;
    }

    to {
        transform: translate3d(0, 0, 0);
        opacity: 1;
    }    
}
.slideInRight {
    animation: slideInRight $delayAnimation;
}


@keyframes fadeInDown {
    from {
        transform: translateXY(100%, 0);
        opacity: 0;
    }

    to {
        transform: translateXY(0, 0);
        opacity: 1;
    }    
}
.fadeInDown {
    animation: fadeInDown $delayAnimation;
}

@keyframes slideInRight3d {
    from {
        transform: translate3d(100%, 0, -100%);
        opacity: 0;
    }

    to {
        transform: translate3D(0, 0, 0);
        opacity: 1;
    }    
}
.slideInRight3D {
    animation: slideInRight3D $delayAnimation;
}


.zoomInDown {
    animation: zoomInDown $delayAnimation;
}

.zoomInUp {
    animation: zoomInUp $delayAnimation;
}
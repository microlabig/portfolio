script(type="text/x-template")#navigation--mobile
    .menu#menuMobile
        .menu__mobile(
            v-if="showMenu"
        )
            .menu__wrapper
                .menu__left
                    .menu__logo
                        h2.menu__title ИБ                
                .menu__right                
                    button(
                        type="button"
                        @click="showMenu = false"
                    ).menu__close
                    transition-group(
                        tag="ul"
                        name="slide"
                    ).menu__list
                        list-item(
                            v-for="item in menuList"
                            :key="item.href"
                            :item="item"
                            :showMenu="showMenu"
                            @scroll="scrollToSection"
                        ).menu__item                            
                    include ./socials

script(type="text/x-template")#list-item
    //-div.slideInUpRight
    div
        a(
            href="#" 
            :title="item.text"
            @click.prevent="$emit('scroll', item.href)"            
        ).menu__link {{item.text}} 

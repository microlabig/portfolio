script(type="text/x-template")#navigation
    .menu
        ul.menu__list
            li(
                v-for="item in menuList"
                :key="item.href"
            ).menu__item
                a(
                    href="#" 
                    :title="item.text"
                    @click.prevent="scrollToSection(item.href)"
                ).menu__link {{item.text}}  

script(type="text/x-template")#navigation--footer
    .menu
        ul.menu__list
            li(
                v-for="item in menuList"



.social
    ul.social__list
        - var socials = ['linkedIn', 'hh', 'github'];
        each social in socials
            li.social__item
                - var soclink = ''                          
                case social
                    when 'linkedIn'
                        - soclink='//www.linkedin.com/in/microlabig/'
                    when 'hh'
                        - soclink='//nn.hh.ru/resume/0ffd953fff05649c9c0039ed1f523344466e4c'
                    when 'github'
                        - soclink='//github.com/microlabig'
                a(href=`${soclink}` target="blank").social__link
                    +icon(social, 'social__icons') 